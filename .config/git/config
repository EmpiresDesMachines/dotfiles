[user]
  name = EmpiresDesMachines
  email = empiresdesmachines@gmail.com
  signingkey = gpg --list-secret-keys --keyid-format=long
[core]
	autocrlf = input
  pager = delta
	editor = nvim
	excludesfile = ~/.config/git/.gitignore
[diff]
	algorithm = patience
	compactionHeuristic = true
	tool = nvimdiff
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\""
[merge]
	tool = nvimdiff4
	prompt = false
[mergetool "nvimdiff4"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[rebase]
  autosquash = false
[commit]
  verbose = true
  gpgSign = true
[interactive]
	diffFilter = delta --color-only
[delta]
	features = side-by-side line-numbers decorations
	navigate = true
	whitespace-error-style = 22 reverse
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[interactive]
	diffFilter = delta --color-only
[mergetool]
	keepBackup = false
[push]
  autoSetupRemote = true
[init]
  defaultBranch = main

[alias]
  l = "!. ~/.config/git/.githelpers && pretty_git_log"
  la = "!git config -l | grep alias | cut -c 7-"
  lg = "log --pretty=format:'%C(yellow)%h%Creset | %C(dim green)%ad%Creset | %C(cyan)%s%Creset%C(auto)%d%Creset | %C(#667788)[%an]%Creset%n' --graph --date=format:'%Y-%m-%d %H:%M:%S' --decorate --numstat"
  ll = "!git lg -30"
	ls = "log --pretty=format:'%C(yellow)%h%Creset | %C(dim green)%ad%Creset | %C(cyan)%s%Creset%C(auto)%d%Creset %C(#667788)[%an]%Creset' --graph --date=format:'%Y-%m-%d %H:%M:%S'"

  f = log --name-status -i --grep

  empty = commit --allow-empty
  # empty = "!git commit -am\"[empty] Initial commit\" --allow-empty"
  ours = "!f() { git co --ours $@ && git add $@; }; f"
  theirs = "!f() { git co --theirs $@ && git add $@; }; f"

# stash {{{
    # sl = stash list
    # sa = stash apply
    # ss = stash save
    # }}}

  c = commit -m
	s = status
	unstage = reset HEAD
	uncommit = reset --soft HEAD~1

